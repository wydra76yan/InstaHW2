<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yanvydra.instahw2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_photo_camera"
                android:padding="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instaword" />
            <TextView
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:padding="10dp"/>


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorForIcons">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="History"
                android:textColor="@color/colorDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:gravity="right"
                android:padding="10dp"
                android:text="Look All"
                android:textColor="@color/colorDark" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:src="@drawable/instaword"
                android:background="@drawable/circle_shape"/>
            <ImageView
                android:layout_marginLeft="14dp"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/instaword"
            android:background="@drawable/circle_shape"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorForIcons">

        </View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:src="@drawable/instaword"
                android:background="@drawable/circle_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:text="vydra.yan"
                android:gravity="center"
                android:textColor="@color/colorDark"
                android:textSize="15sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="410dp"
            android:layout_height="280dp"
            android:layout_gravity="bottom"
            android:src="@drawable/instaword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_chat_black_24dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_arrow_forward_black_24dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_favorite_black_24dp"/>


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorForIcons">

        </View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:padding="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_favorite_black_24dp"
                android:padding="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_photo_camera"
                android:padding="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_chat_black_24dp"
                android:padding="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_person_black_24dp"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

