<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/CustomTxtColor</item>
    </style>

    <style name="CustomTxtColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorDark</item>
    </style>

</resources>
